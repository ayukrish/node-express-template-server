{
  "compilerOptions": {
		"types": ["node", "jest", "express"],
		"lib": [ "es6" ],
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
